@model IndexViewModel

@{
    var cars = Model.Cars.ToList();
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;

}



@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are no cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand - @firstCar.Model (@firstCar.Year) ">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@firstCar.Brand</h5>
                        <p>@firstCar.Model - @firstCar.Year</p>
                    </a>
                </div>
            </div>
        }

        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand - @secondCar.Model (@secondCar.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@secondCar.Brand</h5>
                        <p>@secondCar.Model - @secondCar.Year </p>
                    </a>
                </div>
            </div>
        }

        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand - @thirdCar.Model (@thirdCar.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@thirdCar.Brand</h5>
                        <p>@thirdCar.Model - @thirdCar.Year </p>
                    </a>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalCars Cars
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalRents Rents
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
    </div>
</div>

@section Scripts {
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('/api/statistics', (data) => {
                $('#total-cars').text(data.totalCars + " Cars");
                $('#total-users').text(data.totalUsers + " Users");
                $('#total-rents').text(data.totalRents + " Rents");
                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>
}