@model List<CarListingViewModel>

@{
    var firstCar = Model.Any() ? Model[0] : null;
    var secondCar = Model.Any() ? Model[1] : null;
    var thirdCar = Model.Any() ? Model[2] : null;

}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">There are no cars in the system currently available so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand - @firstCar.Model (@firstCar.Year) ">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@firstCar.Brand</h5>
                        <p>@firstCar.Model - @firstCar.Year (@firstCar.Category)</p>
                    </a>
                </div>
            </div>
        }

        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand - @secondCar.Model (@secondCar.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@secondCar.Brand</h5>
                        <p>@secondCar.Model - @secondCar.Year (@secondCar.Category)</p>
                    </a>
                </div>
            </div>
        }

        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand - @thirdCar.Model (@thirdCar.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id" class="btn btn-primary btn-lg" role="button">
                        <h5>@thirdCar.Brand</h5>
                        <p>@thirdCar.Model - @thirdCar.Year (@thirdCar.Category)</p>
                    </a>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="col-mb-4"></div>